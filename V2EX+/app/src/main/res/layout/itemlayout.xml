<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_image"
            android:layout_toRightOf="@+id/user_image"
            android:layout_toEndOf="@+id/user_image"
            android:textStyle="bold"
            android:textSize="16dp"
            android:id="@+id/use_name" />

        <TextView
            android:text="节点"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/use_name"
            android:layout_toRightOf="@+id/use_name"
            android:layout_toEndOf="@+id/use_name"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:id="@+id/node" />

        <TextView
            android:text="发表时间"
            android:textColor="@color/blue_grey_700"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/user_image"
            android:layout_toRightOf="@+id/user_image"
            android:layout_toEndOf="@+id/user_image"
            android:id="@+id/put_time" />

        <TextView
            android:text="回复数"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/node"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="12dp"
            android:layout_marginEnd="12dp"
            android:id="@+id/replies_tx" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="3dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/user_image"
            android:scaleType="fitXY"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />
    </RelativeLayout>

    <TextView
        android:text="帖子内容"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_text" />

</LinearLayout>